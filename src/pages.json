{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/main/main",
      "style": {
        "navigationBarTitleText": "主页",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "navigationStyle": "custom",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/company/company",
      "style": {
        "navigationBarTitleText": "公司列表",
        "enablePullDownRefresh": false
      }
    }, {
      "path": "pages/phone_inner_input_desk/desk",
      "style": {
        "navigationBarTitleText": "内勤回收列表",
        "navigationStyle": "custom",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/phone_inner_input_desk/bill/bill",
      "style": {
        "navigationBarTitleText": "内勤回收车辆",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/phone_inner_input_desk/micro_bill/micro_bill",
      "style": {
        "navigationBarTitleText": "内勤回收快速录入",
        "enablePullDownRefresh": false
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
